<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/the_puddle_10"
    tools:context=".QuestionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            tools:text="Question 1"
            android:textSize="@dimen/dimen_32"
            android:textStyle="bold"
            android:fontFamily="@font/film_movies"
            android:textColor="@color/Middle_Blue_Green">

        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="215dp"
            android:layout_marginTop="16dp"
            tools:src="@drawable/brasil"
            android:contentDescription="Brazil Flag">

        </ImageView>




    </LinearLayout>

</ScrollView>